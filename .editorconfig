# http://editorconfig.org

# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org


# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

max_line_length = 200

[*.bat]
indent_style = space
end_of_line = crlf

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 200

[*.yml]
indent_size = 2
max_line_length = 200

[*.xml]
indent_size = 2
max_line_length = 200

[*.modules]
indent_size = 2
max_line_length = 200

[LICENSE]
insert_final_newline = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
